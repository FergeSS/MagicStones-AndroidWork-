<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_menu" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="121dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.050000012"
        android:src="@drawable/settings_title" />

    <ImageView
        android:id="@+id/sound"
        android:layout_width="300dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.14999998"
        app:srcCompat="@drawable/frame_sound" />

    <ImageView
        android:id="@+id/vibro"
        android:layout_width="300dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound"
        app:layout_constraintVertical_bias="0.060000002"
        app:srcCompat="@drawable/frame_vibro" />

    <Switch
        android:id="@+id/switchSound"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/switch_sel"
        android:thumbTint="#00FFFFFF"
        android:trackTint="#00FFFFFF"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/sound"
        app:layout_constraintEnd_toEndOf="@+id/sound"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="@+id/sound"
        app:layout_constraintTop_toTopOf="@+id/sound" />
    <Switch
        android:id="@+id/switchVibro"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/switch_sel"
        android:thumbTint="#00FFFFFF"
        android:trackTint="#00FFFFFF"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/vibro"
        app:layout_constraintEnd_toEndOf="@+id/vibro"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="@+id/vibro"
        app:layout_constraintTop_toTopOf="@+id/vibro" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="62dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_sel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>